<div class="auth-page">

  <div class="auth-box">
    <form id="login-box" method="POST" action="/factions/new">
        <div class="top-lab">Submit New Faction</div>

        {{#if error}}
        <div id="error">{{{error}}}</div>
        {{/if}}

        <input class="field" maxlength="30" placeholder="Faction Name" name="name" type="text">
        <input class="field" placeholder="Non-Biased Description" name="description" type="text">
        <input class="field" placeholder="Flag Image URL" name="imgurl" type="text">

        <div class="g-recaptcha" data-sitekey="6Ld9VWgUAAAAANMg2fEBUmbC48-Is_KZEFJ2XbBL"></div>

        <input class="auth-btn btn blue" value="Submit Faction" type="submit">
        <br />
        <p>New factions must be approved by mods before they appear on the front page</p>
    </form>

  </div>

</div>

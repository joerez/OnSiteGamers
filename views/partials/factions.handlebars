<div class="faction-section">

  <div class="center-button">
    <a class="btn blue waves-effect waves-white" href="/factions/new">Submit Faction</a>
  </div>

  <div class="grid">
    {{#each factions}}
      <div class="player waves-effect waves-light">
        <img src={{this.imgurl}} />
        <p><a href="/factions/{{this.name}}">{{this.name}}</a></p>



        {{#if ../currentUser.mod}}

          <div class="admin-buttons">

            <a class="edit-button" href="factions/{{this.name}}/edit"><i class="material-icons">edit</i></a>

          </div>
        {{/if}}

      </div>
    {{/each}}
  </div>


</div>
